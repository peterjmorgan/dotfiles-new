# DO NOT EDIT THIS FILE.
# If you want to make changes, do so in the custom/zsh directory.
# Fork and send pull requests to add features and fix bugs. Thanks!
#
# ================================

# Don't change. The following determines where YADR is installed.

unset ZSH_DEBUG
# export ZSH_DEBUG=true

export location="$HOME/.dotfiles"

# Configuration
for config_file ($location/etc/zsh/*.zsh) {
  if [[ -v ZSH_DEBUG ]]; then
      echo $config_file
  fi
  source $config_file
}

# Put secret configuration settings in ~/.secrets
if [[ -a ~/.secrets ]] then
  source ~/.secrets
fi

# added by pipx (https://github.com/pipxproject/pipx)
export EDITOR=vim

#eval $(op signin petermorgan)

#source /root/.config/broot/launcher/bash/br

#homebrew
export BREW_HOME="/home/linuxbrew/.linuxbrew/bin"
export PATH="$PATH:$BREW_HOME"

# starship
if command -v starship &>/dev/null; then
  eval "$(starship init zsh)"
fi

#zoxide
if command -v zoxide &>/dev/null; then
  eval "$(zoxide init zsh)"
fi

#pyenv
if command -v pyenv &>/dev/null; then
  export PYENV_ROOT="$HOME/.pyenv"
  command -v pyenv &>/dev/null || export PATH="$PYENV_ROOT/bin:$PATH"
  eval "$(pyenv init -)"
fi

if [ -d ~/.local/bin ]; then
  export PATH="$HOME/.local/bin:$PATH"
fi

if [ -d ~/go ]; then
  export GOPATH=$HOME/go
  export GOROOT=/home/linuxbrew/.linuxbrew/Cellar/go/1.18.2/libexec
  export GOBIN=$GOPATH/bin
  export PATH=$PATH:$GOBIN
  export PATH=$PATH:$GOROOT/bin
fi

if command -v direnv &>/dev/null; then
  eval "$(direnv hook zsh)"
fi

[ -f ~/.resh/shellrc ] && source ~/.resh/shellrc # this line was added by RESH (Rich Enchanced Shell History)
