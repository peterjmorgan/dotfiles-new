# Don't change. The following determines where YADR is installed.

unset ZSH_DEBUG
# export ZSH_DEBUG=true

function find_yadr() {
  yadr=`fdfind -H .yadr $HOME | head | sed 's/\/\.yadr//'`
  export yadr
}
export yadr="/home/pmorgan/tools/dotfiles"

# autoload -U promptinit
