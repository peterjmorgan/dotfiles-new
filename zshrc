# find_yadr

# Configuration
for config_file ($yadr/zsh/*.zsh) {
  if [[ -v ZSH_DEBUG ]]; then
      echo $config_file
  fi
  source $config_file
}

# Put secret configuration settings in ~/.secrets
if [[ -a ~/.secrets ]] then
  source ~/.secrets
fi

